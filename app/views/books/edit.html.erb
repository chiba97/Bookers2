<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-ma-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      
      <%= form_with model: @book, local: true do |f|%>
        <div class="form-group">
          <label for="book_title">Title</label>
          <div><%= f.text_field :title,size: 50 %></div>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <div><%= f.text_area :body,size: "50x2" %></div>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book" style="user-select: auto;">
        </div>
      <% end %>
      <%= link_to "Show",book_path(@book)%>
      |
      <%= link_to "Back",books_path%>
      
    </div>
  </div>
</div>